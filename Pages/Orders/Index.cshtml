@page
@model Foodies.Pages.Orders.IndexModel

@{
    ViewData["Title"] = "Order List";
}
<div class="container">
    <h1>Order List</h1>

    <p>
        <a asp-page="Create">Create an order</a>
    </p>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Order[0].Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order[0].ShippingAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order[0].Total)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order[0].Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order[0].AdditionalNote)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order[0].Restaurant)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order[0].Customer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Order[0].DeliveryPartner)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Order)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShippingAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Total)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AdditionalNote)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Restaurant.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Customer.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DeliveryPartner.Name)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.OrderId">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.OrderId">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.OrderId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>