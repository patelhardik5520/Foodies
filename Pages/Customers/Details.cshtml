@page
@model Foodies.Pages.Customers.DetailsModel

@{
    ViewData["Title"] = "Customer Details";
}

<div class="container">
    <h1>Customer Details</h1>

    <div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer.LastName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.LastName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer.AddressLine1)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.AddressLine1)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer.AddressLine2)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.AddressLine2)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer.City)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.City)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer.State)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.State)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer.ZipCode)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.ZipCode)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer.ContactNumber)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.ContactNumber)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.Email)
            </dd>
        </dl>
    </div>
    <div>
        <h2>Order Details</h2>
        @if (Model.Customer.Orders.Any())
        {
            <p>
                <strong>@Model.Customer.Orders.Count()</strong>
                @if (Model.Customer.Orders.Count() == 1)
                {
                    <text>Order</text>
                }
                else
                {
                    <text>Orders</text>
                }
                Found
            </p>
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Order Id</th>
                        <th>Order Date</th>
                        <th>Order Status</th>
                        <th class="text-right">Order Total</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.Customer.Orders)
                    {
                        <tr>
                            <td>@order.OrderId</td>
                            <td>@order.Date</td>
                            <td>@order.Status</td>
                            <td class="text-right">@order.Total</td>
                            <td><a asp-page="/Orders/Details" asp-route-id="@order.OrderId">Details</a></td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th></th>
                        <th></th>
                        <th class="text-right">Total Order Total:</th>
                        <th class="text-right">$@Model.Customer.Orders.Sum(x => x.Total)</th>
                    </tr>
                </tfoot>
            </table>
        }
        else
        {
            <div class="alert alert-warning">
                <p>There are no orders to display</p>
            </div>
        }
    </div>
    
    <div>
        <a asp-page="./Edit" asp-route-id="@Model.Customer.CustomerId">Edit</a> |
        <a asp-page="./Index">Back to Customer Directory</a>
    </div>
</div>